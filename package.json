{
  "name": "sol-gogo",
  "version": "1.0.0",
  "description": "Solana Blockchain Dashboard - React Frontend & Go Backend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run main.go",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o bin/server main.go",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm run install:frontend",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:down:dev": "docker compose -f docker-compose.dev.yml down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
